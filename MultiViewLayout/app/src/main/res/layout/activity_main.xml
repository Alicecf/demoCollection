<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/btn_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="plus"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btn_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="minus"
        app:layout_constraintTop_toBottomOf="@+id/btn_plus" />


    <www.lixiangfei.top.multiviewlayout.MultiViewLayout
        android:id="@+id/mvl"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:text="scroll horizontal"
        app:layout_constraintBottom_toTopOf="@id/mvl"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="236dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <www.lixiangfei.top.multiviewlayout.MultiViewVerticalLayout
        android:id="@+id/mvvl"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="236dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:text="scroll vertical"
        app:layout_constraintBottom_toTopOf="@id/mvvl"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="236dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>