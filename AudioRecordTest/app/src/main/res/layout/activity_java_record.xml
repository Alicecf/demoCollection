<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/btn_create_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="create record"/>
    <Button
        android:id="@+id/btn_start_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start_record"
        app:layout_constraintTop_toBottomOf="@id/btn_create_record" />

    <Button
        android:id="@+id/btn_stop_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop_record"
        app:layout_constraintTop_toBottomOf="@id/btn_start_record"/>

    <TextView
        android:id="@+id/tv_info"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>